pipeline{
    agent {
        label 'slavor_ium'
    }

    stages{
        stage('安卓程序源码同步') {
            steps {
                bat 'mkdir AndroidSampleApp'
                dir("AndroidSampleApp"){
                    git branch:'master', url:'git@github.com:UshioYu/AndroidSampleApp.git'
                }
            }
        }

        stage('安卓编译打包') {
            steps {
                bat '''
                    cd AndroidSampleApp
                    gradlew clean assembleDebug
                '''
            }
        }


        stage('安卓部署') {
            steps {
                bat '''
                    cd AndroidSampleApp
                    set pwd=%cd%
                    set apk=%pwd%\app\build\outputs\apk\debug\app-debug.apk
                    adb uninstall com.appsflyer.androidsampleapp
                    adb install %apk%
                '''
            }
        }

        stage('自动测试程序源码同步') {
            steps {
                bat 'mkdir iAppBVT'
                dir("iAppBVT"){
                    git branch:'master', url:'git@github.com:UshioYu/iAppBVT.git'
                }
            }
        }

        stage('运行自动化测试') {
            steps {
                bat '''
                    cd iAppBVT
                    mvn clean install -Dtest=AppsFlyerBVT
                '''
            }
        }

        stage('发布测试包') {
            steps {
                archiveArtifacts artifacts: 'AndroidSampleApp/app/build/outputs/apk/debug/app-debug.apk'
            }
        }

        stage('通知邮件') {
            steps {
                emailext body: '$DEFAULT_CONTENT', recipientProviders: [[$class: 'RequesterRecipientProvider']], subject: '$DEFAULT_SUBJECT'
            }
        }
    }
}